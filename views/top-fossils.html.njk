{% extends 'base.html.njk' %}

{% block title%} Most Liked Fossils {% endblock title%}

{%block body%}
    <h1> Welcome {{name}}</h1>

    <div class="fossil-div">
      <h3>{{ fossils[0].name }}</h3>
      <h2>Liked {{ fossils[0].num_likes }} times.</h2>
      <img src="{{ fossils[0].img }}" />
    </div>

    <form>
    <div class = "fossil-form-group">
       <label>Choose a fossil</label>
        <select name="fossil">
          <option>Australopithecus, Aust</option>
          <option>Quetzal, Quetz</option>
          <option>Stegosaurus, Steg</option>
          <option>Tyrannosaurus, Tyra</option>
        </select>
    </div>

      <div class = "form-group">
        <button id= "fossil-submit-btn" type= "submit">Submit</button>
      </div>
    </form>

  <table class="most-liked-fossil">
  <thead>
    <tr>
      <th></th>
      <th>Fossil Name</th>
      <th>Likes</th>
    </tr>
  </thead>
  <tbody>
  {%for fossil in arrFossil%}
    <tr>
      <td>{{image}}</td>
      <td>{{fossil.name}}</td>
      <td>{{fossil.likes}}</td>
    </tr>
    {% endfor %}
</tbody>
</table>

{% endblock %}